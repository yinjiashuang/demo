{
  "name": "st-hawk-meeting",
  "private": true,
  "version": "1.0.0",
  "main": "dist/electron-main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build-electron": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "element-plus": "^2.3.8",
    "moment": "^2.29.4",
    "trtc-electron-sdk": "^11.0.501",
    "vue": "^3.3.4",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.2.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "electron-devtools-installer": "^3.2.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.12.0",
    "vue-tsc": "^1.8.5"
  },
  "build": {
    "appId": "com.stone.hawk.client",
    "productName": "鹰眼会议",
    "asar": false,
    "copyright": "Copyright © 2023 stone",
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "dist/electron-preload/*",
      "!node_modules/electron-*",
      "!node_modules/electron-builder",
      "!node_modules/electron-prebuilt-compile",
      "!node_modules/electron-edge-js/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "publish": [
        {
          "provider": "generic",
          "url": "http://127.0.0.1:10247"
        }
      ]
    }
  }
}
